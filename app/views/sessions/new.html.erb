<h1>Log In</h1>

<div class="login-form">

  <%= form_tag sessions_path do %>

  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, placeholder: 'example@gmail.com' %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="field">
    <%= submit_tag "Log In" %>
  </div>

  <% end %>

</div>
