<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= link_to "Home", root_path %>

<div class="user-status">
  <% if current_user %>
    Currently logged in as <%= link_to current_user.first_name, user_path(current_user) %> | <%= link_to "Log Out", session_path(current_user), method: :delete %>
  <% else %>
    <%= link_to "Sign Up", new_user_path %> | <%= link_to "Log In", new_session_path %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
