<%= render @project %>
<%= link_to "Edit", edit_project_path(@project) %>

<%= if current_user.backed_projects.include?(@project) %>
Welcome back loyal supporter!
<% end %>
<div class = 'instructions'> Select a pledge level: </div>

<div class = 'project-rewards'>
  <% @project.rewards.each do |reward| %>
    <div class = 'reward'>
    <%= link_to reward.name, project_pledges_path(@project), method: :post, data: reward.id %>
    Description: <%= reward.description%>
    Minimum Contribution: <%= reward.threshold%>
  </div>
  <% end %>
</div>

<div class = 'pledge-form'>
</div>
